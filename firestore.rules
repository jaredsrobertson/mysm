rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated and part of the room
    function isMember(roomId) {
      return request.auth != null && request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
    }

    // User Profiles: Users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rooms: Create allows anyone, Read/Update restricted to members
    match /rooms/{roomId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid in resource.data.members;

      // Subcollections inherit logic via helper function
      match /history/{msgId} {
        allow read, create: if isMember(roomId);
      }
      
      match /photos/{photoId} {
        allow read, create, delete: if isMember(roomId);
        allow update: if isMember(roomId); // For reordering
      }
    }
  }
}